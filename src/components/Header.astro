---
const baseUrl = import.meta.env.BASE_URL;
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100"
>
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Avatar -->
    <div class="flex items-center">
      <a href={baseUrl}>
        <img
          src={`${baseUrl}images/avatar.png`}
          alt="Annie Liao Memoji"
          class="w-12 h-12 rounded-full object-cover"
        />
      </a>
    </div>

    <!-- Navigation -->
    <nav class="flex items-center space-x-8">
      <a
        href={`${baseUrl}#work`}
        class="text-gray-700 hover:text-gray-900 font-medium transition-colors duration-200"
      >
        Work
      </a>
      <a
        href={`${baseUrl}#about`}
        class="text-gray-700 hover:text-gray-900 font-medium transition-colors duration-200"
      >
        About
      </a>
      <a
        href="http://linkedin.com/in/liaoannie/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-700 hover:text-gray-900 font-medium transition-colors duration-200 flex items-center gap-1"
      >
        Connect
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </nav>
  </div>
</header>
