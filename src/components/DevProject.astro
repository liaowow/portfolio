                  <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-mint-600" fill="currentColor" viewBox="0 0 24 24">
                      <Fragment set:html={getIcon('quote')} />
                    </svg>
                  </div>
                  <div>
                    <blockquote class="text-xl text-neutral-900 font-medium mb-3">
                      "{project.testimonial.quote}"
                    </blockquote>
                    <div class="text-neutral-700 font-medium">— {project.testimonial.author}, {project.testimonial.role}</div>
