<section id="hero" class="min-h-screen flex items-center justify-start px-6">
  <div class="max-w-7xl mx-auto w-full flex">
    <div class="max-w-4xl">
      <h1 class="text-3xl md:text-7xl font-extralight text-gray-900 leading-tight mr-2 md:mr-8">Meet</h1>
    </div>
    <div class="max-w-4xl">
      <!-- Main headline -->
      <h1 class="text-3xl md:text-7xl font-extralight text-gray-900 leading-tight mb-2">
        <span class="font-extralight hero-text" data-reveal="annie"><span class="font-bold">A</span>nnie.</span>
      </h1>
      
      <!-- Descriptors with bold emphasis -->
      <div class="text-3xl md:text-7xl font-extralight text-gray-900 leading-tight mb-12 space-y-2">
        <div class="flex items-start" data-reveal="business">
          <span class="font-bold text-left">B</span>
          <span>usiness-minded.</span>
        </div>
        <div class="flex items-start" data-reveal="code">
          <span class="font-bold text-left">C</span>
          <span>ode-savvy.</span>
        </div>
        <div class="flex items-start" data-reveal="design">
          <span class="font-bold text-left">D</span>
          <span>esign-driven.</span>
        </div>
      </div>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-4xl text-gray-900 font-light leading-relaxed hero-text" data-reveal="subtitle">
        I build thoughtful software that solves problems.
      </p>
    </div>
  </div>
</section>

<style>
  .hero-text {
    opacity: 0;
    transform: translateY(50px);
  }
  
  /* Hide entire B, C, D lines initially */
  [data-reveal="business"],
  [data-reveal="code"],
  [data-reveal="design"] {
    opacity: 0;
  }
  
  /* Initial state for B, C, D letters */
  [data-reveal="business"] .font-bold,
  [data-reveal="code"] .font-bold,
  [data-reveal="design"] .font-bold {
    opacity: 0;
    transform: translateX(-100px);
  }
</style>

<script>
  import { initHeroAnimation } from '../scripts/hero-animation.ts';

  document.addEventListener('DOMContentLoaded', () => {
    initHeroAnimation();
  });
</script>