const projects = [
  {
    id: 1,
    title: "E-Commerce Checkout Revamp",
    time: "Q4 2024",
    description: "Transformed three-step popup checkout into single-page experience, boosting conversion rates by 12% YoY through strategic UX improvements.",
    image: `${baseUrl}images/bump_checkout_before.png`,
    imageAlt: "E-Commerce checkout interface",
    tags: ["React", "Node.js", "Statsig A/B"],
    url: `${baseUrl}projects/ecommerce-checkout-revamp`,
    cta: "View Details"
  },
  {
    id: 2,
    title: "Coupon Swap Scheduler",
    time: "Q2 2025",
    description: "Automated, self-serve coupon scheduler that cuts ~2 hrs/week of dev work with event-driven AWS architecture.",
    image: `${baseUrl}images/coupon-swap-thumbnail.png`,
    imageAlt: "Coupon swap scheduler interface",
    tags: ["React", "AWS Lambda", "EventBridge"],
    url: `${baseUrl}projects/coupon-swap-scheduler`,
    cta: "View Details"
  },
  {
    id: 3,
    title: "Internal Data Management Portal",
    time: "Q1 2025",
    description: "Transformed manual CSV updates into robust database tool with live updates, 98.5% code reduction, and eliminated developer involvement.",
    image: `${baseUrl}images/internal-data-thumbnail.png`,
    imageAlt: "Internal data management portal interface",
    tags: ["NextJS", "TypeScript", "MongoDB"],
    url: `${baseUrl}projects/internal-data-management-portal`,
    cta: "View Details"
  },
  {
    id: 4,
    title: "Bump Health Branding",
    time: "Q1 2022",
    description: "From software engineer to surprise art director: Created a company logo and brand identity in one week that's still going strong three years later.",
    image: `${baseUrl}images/bump_logo_final.jpg`,
    imageAlt: "Bump Health logo design",
    tags: ["Adobe Illustrator", "Squarespace", "Logo Design"],
    url: `${baseUrl}projects/bump-health-branding`,
    cta: "View Details"
  },
  {
    id: 5,
    title: "Baby Name Blossoms",
    time: "Q3 2020",
    description: "When art meets data: My first D3.js adventure that transforms decades of baby name trends into flowers, one petal at a time.",
    image: `${baseUrl}images/baby_name_blossoms_color.png`,
    imageAlt: "Baby name blossoms data visualization",
    tags: ["React", "D3.js", "Data Viz", "Personal"],
    url: `${baseUrl}projects/baby-name-blossoms`,
    cta: "View Details"
  },
  {
    id: 6,
    title: "Infographics Collection",
    time: "2011 â€“ 2015",
    description: "A curated selection of print and digital visualizations from my newsroom design career, transforming complex stories into clear, engaging graphics.",
    image: `${baseUrl}images/infographic_5_rubber_duck.jpg`,
    imageAlt: "Infographic about how sunglasses work",
    tags: ["Adobe Illustrator", "Print Design", "Data Viz", "Editorial"],
    url: `${baseUrl}projects/infographics`,
    cta: "View Gallery"
  }
