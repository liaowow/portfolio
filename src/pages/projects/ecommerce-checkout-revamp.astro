    <script>
      // Ensure modal functionality is available
      document.addEventListener('DOMContentLoaded', () => {
        // Wait a bit for the ImageModal script to initialize
        setTimeout(() => {
          const modal = (window as any).imageModal_checkoutModal;
          if (!modal) {
            console.error('Modal not initialized properly, creating fallback');
            // Create a fallback modal functionality
            (window as any).imageModal_checkoutModal = {
              open: (src: string, alt: string) => {
                const modalEl = document.getElementById('checkoutModal');
                const imgEl = modalEl?.querySelector('[data-modal-image]') as HTMLImageElement;
                const captionEl = modalEl?.querySelector('[data-modal-caption]') as HTMLElement;
                
                if (modalEl && imgEl && captionEl) {
                  imgEl.src = src;
                  imgEl.alt = alt;
                  captionEl.textContent = alt;
                  modalEl.classList.remove('hidden');
                  document.body.style.overflow = 'hidden';
                }
              }
            };
          }
        }, 100);
      });
