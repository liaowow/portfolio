---
import Header from "../components/Header.astro";
import FunItemDetailView from "../components/FunItemDetailView.astro";
export const prerender = true;

const baseUrl = import.meta.env.BASE_URL;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={`${baseUrl}favicon.png`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Fun Adventures</title>
    <meta
      name="description"
      content="Explore the fun adventures and shared experiences of Annie and Allan through a fun gyroscopic experience."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-sans antialiased bg-gray-900">
    <Header />
    
    <main class="pt-20">
      <!-- Kaleidoscope Container -->
      <section class="py-16 px-6 bg-gray-900">
        <div class="max-w-7xl mx-auto">
          <!-- Category Controls -->
          <div class="category-controls">
            <button class="category-btn active" data-category="all">All</button>
            <button class="category-btn" data-category="food">Food</button>
            <button class="category-btn" data-category="art">Art</button>
            <button class="category-btn" data-category="nature">Nature</button>
            <button class="category-btn" data-category="entertainment">Entertainment</button>
          </div>

          <!-- Kaleidoscope Grid -->
          <div class="kaleidoscope-container" id="kaleidoscope">
            <!-- Food Items -->
            <div class="kaleidoscope-piece food-piece" data-category="food">
              <div class="piece-content">
                <div class="piece-icon">üçï</div>
                <h3>Pizza Night</h3>
                <p>Downtown</p>
              </div>
            </div>
            <div class="kaleidoscope-piece food-piece" data-category="food">
              <div class="piece-content">
                <div class="piece-icon">üçú</div>
                <h3>Ramen Adventure</h3>
                <p>Chinatown</p>
              </div>
            </div>
            <div class="kaleidoscope-piece food-piece" data-category="food">
              <div class="piece-content">
                <div class="piece-icon">ü•ò</div>
                <h3>Cooking Class</h3>
                <p>Little Italy</p>
              </div>
            </div>

            <!-- Art Items -->
            <div class="kaleidoscope-piece art-piece" data-category="art">
              <div class="piece-content">
                <div class="piece-icon">üé®</div>
                <h3>Museum Visit</h3>
                <p>MOMA</p>
              </div>
            </div>
            <div class="kaleidoscope-piece art-piece" data-category="art">
              <div class="piece-content">
                <div class="piece-icon">üñºÔ∏è</div>
                <h3>Gallery Opening</h3>
                <p>Chelsea</p>
              </div>
            </div>

            <!-- Nature Items -->
            <div class="kaleidoscope-piece nature-piece" data-category="nature">
              <div class="piece-content">
                <div class="piece-icon">üå≤</div>
                <h3>Hiking Trail</h3>
                <p>Central Park</p>
              </div>
            </div>
            <div class="kaleidoscope-piece nature-piece" data-category="nature">
              <div class="piece-content">
                <div class="piece-icon">üå∏</div>
                <h3>Cherry Blossoms</h3>
                <p>Brooklyn Botanic</p>
              </div>
            </div>

            <!-- Entertainment Items -->
            <div class="kaleidoscope-piece entertainment-piece" data-category="entertainment">
              <div class="piece-content">
                <div class="piece-icon">üé≠</div>
                <h3>Broadway Show</h3>
                <p>Theater District</p>
              </div>
            </div>
            <div class="kaleidoscope-piece entertainment-piece" data-category="entertainment">
              <div class="piece-content">
                <div class="piece-icon">üéµ</div>
                <h3>Concert</h3>
                <p>Madison Square</p>
              </div>
            </div>
          </div>

          <!-- Interaction Controls -->
          <div class="kaleidoscope-controls">
            <button class="control-btn" id="shuffleBtn">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Shuffle
            </button>
            <button class="control-btn" id="resetBtn">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Reset
            </button>
          </div>
        </div>
      </section>
    </main>

    <!-- FunItem Detail Modal -->
    <FunItemDetailView id="funitem-detail-modal" />

    <style>
      .category-controls {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 3rem;
      }

      .category-btn {
        padding: 0.75rem 1.5rem;
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        background: rgba(17, 24, 39, 0.6);
        color: #d1d5db;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        font-weight: 500;
        backdrop-filter: blur(10px);
      }

      .category-btn.active,
      .category-btn:hover {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        border-color: rgba(255, 255, 255, 0.4);
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
      }

      .kaleidoscope-container {
        position: relative;
        width: 100%;
        height: 600px;
        background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
        border-radius: 20px;
        padding: 2rem;
        overflow: hidden;
      }

      .kaleidoscope-piece {
        position: absolute;
        width: 120px;
        height: 120px;
        background: rgba(17, 24, 39, 0.8);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        backdrop-filter: blur(10px);
        transform-origin: center;
      }

      .kaleidoscope-piece:hover {
        transform: scale(1.1) rotate(5deg);
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        z-index: 10;
      }

      .piece-content {
        padding: 1rem;
        text-align: center;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      .piece-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        display: block;
      }

      .kaleidoscope-piece h3 {
        font-size: 0.85rem;
        font-weight: 500;
        color: #f3f4f6;
        margin: 0 0 0.25rem 0;
        line-height: 1.2;
      }

      .kaleidoscope-piece p {
        font-size: 0.7rem;
        color: #d1d5db;
        margin: 0;
        line-height: 1.2;
      }

      /* Category-specific colors */
      .food-piece {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(17, 24, 39, 0.8));
        border-color: rgba(239, 68, 68, 0.3);
      }

      .art-piece {
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(17, 24, 39, 0.8));
        border-color: rgba(168, 85, 247, 0.3);
      }

      .nature-piece {
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(17, 24, 39, 0.8));
        border-color: rgba(34, 197, 94, 0.3);
      }

      .entertainment-piece {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(17, 24, 39, 0.8));
        border-color: rgba(59, 130, 246, 0.3);
      }

      /* Initial kaleidoscope positions */
      .kaleidoscope-piece:nth-child(1) { top: 50px; left: 100px; transform: rotate(12deg); }
      .kaleidoscope-piece:nth-child(2) { top: 80px; left: 300px; transform: rotate(-8deg); }
      .kaleidoscope-piece:nth-child(3) { top: 150px; left: 500px; transform: rotate(25deg); }
      .kaleidoscope-piece:nth-child(4) { top: 200px; left: 150px; transform: rotate(-15deg); }
      .kaleidoscope-piece:nth-child(5) { top: 250px; left: 400px; transform: rotate(18deg); }
      .kaleidoscope-piece:nth-child(6) { top: 320px; left: 80px; transform: rotate(-22deg); }
      .kaleidoscope-piece:nth-child(7) { top: 350px; left: 320px; transform: rotate(8deg); }
      .kaleidoscope-piece:nth-child(8) { top: 400px; left: 200px; transform: rotate(-12deg); }
      .kaleidoscope-piece:nth-child(9) { top: 450px; left: 450px; transform: rotate(30deg); }

      .kaleidoscope-controls {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
      }

      .control-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        background: rgba(17, 24, 39, 0.6);
        color: #d1d5db;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        font-weight: 500;
        backdrop-filter: blur(10px);
      }

      .control-btn:hover {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        border-color: rgba(255, 255, 255, 0.4);
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
      }

      /* Hidden state for filtering */
      .kaleidoscope-piece.hidden {
        opacity: 0;
        transform: scale(0) rotate(180deg);
        pointer-events: none;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .kaleidoscope-container {
          height: 400px;
          padding: 1rem;
        }

        .kaleidoscope-piece {
          width: 80px;
          height: 80px;
        }

        .piece-content {
          padding: 0.5rem;
        }

        .piece-icon {
          font-size: 1.5rem;
          margin-bottom: 0.25rem;
        }

        .kaleidoscope-piece h3 {
          font-size: 0.7rem;
          margin-bottom: 0.1rem;
        }

        .kaleidoscope-piece p {
          font-size: 0.6rem;
        }

        /* Adjusted mobile positions */
        .kaleidoscope-piece:nth-child(1) { top: 30px; left: 50px; }
        .kaleidoscope-piece:nth-child(2) { top: 50px; left: 180px; }
        .kaleidoscope-piece:nth-child(3) { top: 80px; left: 280px; }
        .kaleidoscope-piece:nth-child(4) { top: 120px; left: 80px; }
        .kaleidoscope-piece:nth-child(5) { top: 150px; left: 220px; }
        .kaleidoscope-piece:nth-child(6) { top: 180px; left: 40px; }
        .kaleidoscope-piece:nth-child(7) { top: 220px; left: 160px; }
        .kaleidoscope-piece:nth-child(8) { top: 250px; left: 100px; }
        .kaleidoscope-piece:nth-child(9) { top: 280px; left: 250px; }

        .category-controls {
          gap: 0.5rem;
          margin-bottom: 2rem;
        }

        .category-btn {
          padding: 0.5rem 1rem;
          font-size: 0.8rem;
        }
      }
    </style>

    <script>
      import { initPhysicsGyroscope } from '../scripts/physics-gyroscope.ts';
      import { initFunItemDetail } from '../scripts/funitem-detail.ts';

      // Initialize both systems when DOM is loaded
      document.addEventListener('DOMContentLoaded', async () => {
        await initPhysicsGyroscope();
        initFunItemDetail();
      });
    </script>
  </body>
</html>